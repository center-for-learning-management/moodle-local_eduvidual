<h4>{{#str}} admin:orgcoursebasement:title, local_eduvidual {{/str}}</h4>
<p>{{#str}} admin:orgcoursebasement:description, local_eduvidual {{/str}}</p>
<select id="local_eduvidual_admin_orgcoursebasement" onchange="var sel = this; require(['local_eduvidual/admin'], function(ADMIN) { ADMIN.orgcoursebasement(sel.value); });">
{{#orgcoursebasements}}
    <optgroup label="{{key}}">
        {{#basements}}
            <option value="{{id}}"{{#selected}} selected{{/selected}}>{{fullname}}</option>
        {{/basements}}
    </optgroup>
{{/orgcoursebasements}}
{{^orgcoursebasements}}
    <p class="alert alert-info">{{#str}} orgcoursebasement:nocoursebasementsgiven, local_eduvidual {{/str}}</p>
{{/orgcoursebasements}}
</select>

