<div class="ui-eduvidual__">
    <p class="alert alert-warning">{{#str}} manage:login:adminonly, local_eduvidual {{/str}}</p>

    <h5>{{#str}} manage:maildomain, local_eduvidual {{/str}}</h5>
    <p>{{#str}} manage:maildomain:description, local_eduvidual {{/str}}</p>

    {{#is_siteadmin}}
        <a class="btn btn-primary btn-block" href="#"
           onclick="var btn = this; require(['local_eduvidual/manager'], function(MANAGER) { MANAGER.maildomain_apply({{orgid}}, btn); }); return false;">
            {{#str}} manage:login:enrol, local_eduvidual {{/str}}
        </a>
        <label for="local_eduvidual_manage_maildomain">
            {{#str}} Student, local_eduvidual {{/str}}
        </label>
        <input id="local_eduvidual_manage_maildomain" value="{{maildomain}}" style="width: 100%;"
               onkeyup="var inp = this; require(['local_eduvidual/manager'], function(MANAGER) { MANAGER.maildomain(inp, {{orgid}}, ''); });" />
        <label for="local_eduvidual_manage_maildomain_teacher">
            {{#str}} Teacher, local_eduvidual {{/str}}
        </label>
        <input id="local_eduvidual_manage_maildomain_teacher" value="{{maildomainteacher}}" style="width: 100%;"
               onkeyup="var inp = this; require(['local_eduvidual/manager'], function(MANAGER) { MANAGER.maildomain(inp, {{orgid}}, 'teacher'); });" />
    {{/is_siteadmin}}
    {{^is_siteadmin}}
        <label for="local_eduvidual_manage_maildomain">{{#str}} Student, local_eduvidual {{/str}}</label>
        <pre>
        {{maildomain}}
            {{^maildomain}}{{#str}} n_a, local_eduvidual {{/str}}{{/maildomain}}
        </pre>
        <label for="local_eduvidual_manage_maildomain_teacher">{{#str}} Teacher, local_eduvidual {{/str}}</label>
        <pre>
        {{maildomainteacher}}
            {{^maildomainteacher}}{{#str}} n_a, local_eduvidual {{/str}}{{/maildomainteacher}}
        </pre>
    {{/is_siteadmin}}
</div>
